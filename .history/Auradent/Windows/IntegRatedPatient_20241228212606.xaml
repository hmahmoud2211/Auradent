                        <TextBlock Name="StatusText"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Margin="0,0,0,20"
                                   FontSize="16"
                                   Foreground="Gray"
                                   Text="Click a tooth to view details."/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

    </Border>




