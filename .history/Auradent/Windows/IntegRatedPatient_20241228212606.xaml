                                         VerticalAlignment="Center">
                                <!-- Buttons for Upper Teeth -->
                                <Button Content="1"
                                        Width="40"
                                        Height="40"
                                        Name="Tooth1"
                                        Click="Tooth_Click"/>
                                <Button Content="2"
                                        Width="40"
                                        Height="40"
                                        Name="Tooth2"
                                        Click="Tooth_Click"/>
                                <!-- Repeat buttons for all 16 upper teeth -->
                                <Button Content="16"
                                        Width="40"
                                        Height="40"
                                        Name="Tooth16"
                                        Click="Tooth_Click"/>
