                                <!-- Repeat buttons for all 16 lower teeth -->
                                <Button Content="32"
                                        Width="40"
                                        Height="40"
                                        Name="Tooth32"
                                        Click="Tooth_Click"/>
                            </UniformGrid>
                        </Grid>

