                            <!-- Lower Teeth Row -->
                            <UniformGrid Rows="1"
                                         Columns="16"
                                         Grid.Row="1"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Margin="0,20,0,0">
