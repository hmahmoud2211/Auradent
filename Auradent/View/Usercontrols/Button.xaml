<UserControl x:Class="Auradent.View.Usercontrols.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Auradent.View.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    
    <Grid>
        <Border CornerRadius="20"  BorderBrush="Gray" BorderThickness="1" Padding="0">
            <Button x:Name="btn" Height="50" BorderThickness="0" Padding="10,5,10,5"  Background="Transparent" BorderBrush="{x:Null}" />
        </Border>
    </Grid>
</UserControl>
