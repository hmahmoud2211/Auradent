<UserControl x:Class="Auradent.View.Usercontrols.Textboxsignup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Auradent.View.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <Border CornerRadius="20" BorderBrush="Gray" BorderThickness="1" Padding="0">
            <TextBox x:Name="Txt_sign_up" VerticalContentAlignment="Center"
            FontSize="20" FontWeight="Light" Background="Transparent" Foreground="#96AEBA" TextChanged="Txt_sign_up_TextChanged"
              BorderThickness="0" Padding="10,5,10,5"/>
        </Border>
        
        <TextBlock  Name="tbplaceholder" Text="{Binding Placeholder}" FontSize="20" FontWeight="Light" 
            Foreground="DarkGray" VerticalAlignment="Center" Margin="10"
                    Panel.ZIndex="-1" />
    </Grid>
</UserControl>
