<Window x:Class="Auradent.Windows.MedicalRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrol="clr-namespace:Auradent.View.Usercontrols"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:core="clr-namespace:Auradent.core"
        mc:Ignorable="d"
        Height="720"
        Width="1130"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <core:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Window.Resources>

    <Grid>
        <!--Main Section-->
        <Border Background="#f4f4f4"
                CornerRadius="30"
                MouseDown="Border_MouseDown">
            
            <!-- Add ScrollViewer here -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Close Button -->
                    <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,10,10,0"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            BorderBrush="Transparent">
                        <fa:ImageAwesome Icon="Times"
                                        Foreground="#3F6F95"
                                        Width="20"
                                        Height="20"/>
                    </Button>

                    <!--Top section-->
                    <StackPanel Orientation="Horizontal"
                              VerticalAlignment="Center"
                              Margin="75 20 0 20">
                        <!--Title Number-->
                        <TextBlock x:Name="PatientId"
                                 Foreground="#3F6F95"
                                 FontSize="24"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"
                                 Margin="50 0 30 10"/>
                        <!--Title Texts-->
                        <StackPanel VerticalAlignment="Center"
                                  Margin="0 0 0 10">
                            <TextBlock x:Name="PatientName"
                                     Foreground="#3F6F95"
                                     FontSize="32"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <!--Bottom Section-->
                    <Grid Grid.Row="1"
                          Margin="20 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--Scan Results Section-->
                        <Border Background="#ffffff"
                                Grid.Column="0"
                                Padding="30 20 30 20"
                                CornerRadius="20"
                                Margin="20 0 20 40">
                            <StackPanel>
                                <TextBlock Text="Scan Results"
                                         Style="{StaticResource title}"
                                         Margin="0 0 0 10"/>

                                <!-- Upload Button -->
                                <Button Style="{StaticResource pinkButton}"
                                        Margin="0,10,0,20"
                                        Click="UploadScan_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Icon="Upload"
                                                       Width="15"
                                                       Foreground="#ffffff"
                                                       Margin="0,0,10,0"/>
                                        <TextBlock Text="Upload Scan"/>
                                    </StackPanel>
                                </Button>

                                <!-- Scans List -->
                                <ScrollViewer MaxHeight="450"
                                            VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="ScansList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F5F5F5"
                                                        Margin="0,0,0,10"
                                                        CornerRadius="8"
                                                        Padding="15">
                                                    <StackPanel>
                                                        <Image Source="{Binding ImageSource}"
                                                               MaxHeight="200"
                                                               Stretch="Uniform"
                                                               Margin="0,0,0,10"/>
                                                        <TextBlock Text="{Binding ScanDate, StringFormat={}Scan Date: {0:d}}"
                                                                 Foreground="#666666"/>
                                                        <Button Content="Process with OCR"
                                                                Click="ProcessOCR_Click"
                                                                Tag="{Binding Id}"
                                                                Style="{StaticResource pinkButton}"
                                                                Margin="0,10,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!--OCR Results Section-->
                        <Border Background="#ffffff"
                                Grid.Column="1"
                                Padding="30 20 30 20"
                                CornerRadius="20"
                                Margin="20 0 20 40">
                            <StackPanel>
                                <TextBlock Text="OCR Results"
                                         Style="{StaticResource title}"
                                         Margin="0 0 0 20"/>

                                <!-- OCR Results Display -->
                                <ScrollViewer MaxHeight="500"
                                            VerticalScrollBarVisibility="Auto">
                                    <TextBox x:Name="OcrResultsText"
                                             IsReadOnly="True"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             Height="Auto"
                                             MinHeight="200"
                                             Background="#F5F5F5"
                                             Padding="10"/>
                                </ScrollViewer>

                                <!-- Save Button -->
                                <Button Content="Save Results"
                                        Click="SaveResults_Click"
                                        Style="{StaticResource pinkButton}"
                                        Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>