<Page x:Class="Auradent.pages.Signuppage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Auradent.pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:userconrols="clr-namespace:Auradent.View.Usercontrols"
      
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Height="auto" Width="auto"
      Title="Signuppage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Green Professional Gradient Login Section Website UI Desktop Prototype (1).png"/>
        </Grid.Background>

        <!-- Back Button -->
        <Button Grid.Column="0" 
                Style="{StaticResource button}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="40,40,0,0" 
                Click="BackButton"
                Panel.ZIndex="1">
            <fa:ImageAwesome Icon="AngleLeft" 
                            Width="28" 
                            Height="28" 
                            Foreground="#759DC0" />
        </Button>

        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled">
            <Grid>
        <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

                <!-- Left Side - Logo -->
                <Image Source="/Auradent-Logo.png" 
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Width="500"
                       Height="500"
                       Margin="100,100,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>

                <!-- Right Side - Form -->
                <StackPanel Grid.Column="2" 
                          Margin="0,100,0,50">
                    
                    <!-- Header -->
                    <TextBlock Text="Connect the distance between&#x0a;you and others!"
                             Foreground="#D7EFFB"
                             FontSize="40"
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"
                             TextAlignment="Left"/>

                    <TextBlock Text="Forgot your password? Reset it here."
                             Foreground="#D7EFFB"
                             FontSize="19"
                             Margin="0,0,0,40"/>

                    <!-- Form Fields -->
                    <TextBlock Text="First Name"
                             Foreground="#D7EFFB"
                             FontSize="17"
                             Margin="0,0,0,10"/>
                    <userconrols:Textboxsignup x:Name="Name_txt"
                                             Placeholder="Name"
                                             Height="50"
                                             Width="500"
                                             HorizontalAlignment="Left"
                                             Margin="0,0,0,20"/>

                    <TextBlock Text="Enter your ID"
                             Foreground="#D7EFFB"
                             FontSize="17"
                             Margin="0,0,0,10"/>
                    <userconrols:Textboxsignup x:Name="ID_txt"
                                             Placeholder="ID"
                                             Height="50"
                                             Width="500"
                                             HorizontalAlignment="Left"
                                             Margin="0,0,0,20"/>

                    <TextBlock Text="Enter your National ID"
                             Foreground="#D7EFFB"
                             FontSize="17"
                             Margin="0,0,0,10"/>
                    <userconrols:Textboxsignup x:Name="National_Id_txt"
                                             Placeholder="National ID"
                                             Height="50"
                                             Width="500"
                                             HorizontalAlignment="Left"
                                             Margin="0,0,0,20"/>

                    <TextBlock Text="Enter your new Password"
                             Foreground="#D7EFFB"
                             FontSize="17"
                             Margin="0,0,0,10"/>
                    <userconrols:Passwordtxtbox x:Name="new_pass_txt"
                                              Placeholder="Password"
                                              Height="50"
                                              Width="500"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,10"
                                              PasswordChanged="new_pass_txt_PasswordChanged"/>

                    <!-- Password Requirements -->
                    <Border Background="Transparent"
                            CornerRadius="10"
                            Margin="0,10,0,20"
                            Padding="15">
                        <StackPanel x:Name="PasswordCriteriaPanel">
                            <TextBlock Text="Password Requirements:"
                                     Foreground="#D7EFFB"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,10"/>

                            <Grid Margin="5,0">
                                <!-- Individual criteria with icons -->
                                <Grid Margin="5,0">
        <Grid.RowDefinitions>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Length Requirement -->
                                    <fa:ImageAwesome x:Name="LengthIcon"
                                                    Grid.Row="0"
                                                    Icon="Times" 
                                                    Foreground="Red"
                                                    Width="12" 
                                                    Height="12"
                                                    Margin="0,6,8,0"/>
                                    <TextBlock x:Name="LengthText"
                                              Grid.Row="0"
                                              Grid.Column="1"
                                              Text="At least 8 characters"
                                              Foreground="#FFB3B3"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>

                                    <!-- Uppercase Requirement -->
                                    <fa:ImageAwesome x:Name="UpperIcon"
                                                    Grid.Row="1"
                                                    Icon="Times"
                                                    Foreground="Red"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="0,6,8,0"/>
                                    <TextBlock x:Name="UpperText"
                                              Grid.Row="1"
                                              Grid.Column="1"
                                              Text="One uppercase letter"
                                              Foreground="#FFB3B3"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>

                                    <!-- Lowercase Requirement -->
                                    <fa:ImageAwesome x:Name="LowerIcon"
                                                    Grid.Row="2"
                                                    Icon="Times"
                                                    Foreground="Red"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="0,6,8,0"/>
                                    <TextBlock x:Name="LowerText"
                                              Grid.Row="2"
                                              Grid.Column="1"
                                              Text="One lowercase letter"
                                              Foreground="#FFB3B3"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>

                                    <!-- Number Requirement -->
                                    <fa:ImageAwesome x:Name="NumberIcon"
                                                    Grid.Row="3"
                                                    Icon="Times"
                                                    Foreground="Red"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="0,6,8,0"/>
                                    <TextBlock x:Name="NumberText"
                                              Grid.Row="3"
                                              Grid.Column="1"
                                              Text="One number"
                                              Foreground="#FFB3B3"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>

                                    <!-- Special Character Requirement -->
                                    <fa:ImageAwesome x:Name="SpecialIcon"
                                                    Grid.Row="4"
                                                    Icon="Times"
                                                    Foreground="Red"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="0,6,8,0"/>
                                    <TextBlock x:Name="SpecialText"
                                              Grid.Row="4"
                                              Grid.Column="1"
                                              Text="One special character (!@#$%^&amp;*)"
                                              Foreground="#FFB3B3"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Login Button -->
                    <Border CornerRadius="20"
                           BorderBrush="Gray"
                           BorderThickness="1"
                           Margin="0,20,0,0"
                           Height="60">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3F6F95"/>
                    <GradientStop Color="#FF7BD2FF" Offset="0.997"/>
                </LinearGradientBrush>
            </Border.Background>
                        <Button x:Name="Signup_btn"
                               Content="Log in"
                               FontSize="35"
                               Background="Transparent"
                               BorderBrush="{x:Null}"
                               Foreground="White"
                               Click="Signup_btn_Click"/>
        </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
